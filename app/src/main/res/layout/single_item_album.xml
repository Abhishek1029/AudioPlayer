<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="album"
            type="com.mvvm.audioplayer.data.Album" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/albumIV"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:loadAlbumThumbnail="@{album}"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/albumTitleTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:hint="@string/album_name"
        android:textSize="16sp"
        android:text="@{album.albumTitle}"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/albumIV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/albumIV"/>

    <TextView
        android:id="@+id/albumSongsCountTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:hint="@string/songs_count"
        android:textSize="13sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textStyle="bold"
        android:text='@{"No. Of Songs:- " + album.songsCount}'
        app:layout_constraintTop_toBottomOf="@id/albumTitleTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/albumIV"/>


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>